<h1><%= @task.title %></h1>

<p><%= @task.body %></p>

<% if @task.done %>
    <p class="status"><%= "Done"%></p>
<%end%>

<ul>
    <li>
        <%= link_to "Edit", edit_task_path(@task) %>
    </li>
    <li>
        <%= link_to "Destroy", task_path(@task), 
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
</ul>
