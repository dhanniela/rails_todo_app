<%= form_with model: task do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>

        <% @task.errors.full_messages_for(:title).each do |message| %>
            <div class="error-message">
                <%= message %>
            </div>
        <% end %>
    </div>

    <div>
        <%= form.label :body %>
        <%= form.text_area :body %>
    </div>

    <div>
        <%= form.check_box :done %>
        <%= form.label :done %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>
